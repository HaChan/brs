<tr>
	<td><%= book.id %></td>
	<td><%= link_to book.title, admin_book_path(book) %>
	</td>
	<td><%= book.rating%></td>
	<td><%= book.publish_date%></td>
	<td><%= book.num_page%></td>
	<td><%= book.price%>$</td>
	<td><%= book.category.name %></td>
	<td><%= "so favourites"%></td>
	<td><%= link_to "Edit", edit_admin_book_path(book),
	                              class: "btn btn-small btn-primary" %></td>
	<td><%= link_to "Delete", admin_book_path(book), method: :delete,
                                  data: { confirm: "You sure?" },
                                  class: "btn btn-small btn-primary"%>
</tr>