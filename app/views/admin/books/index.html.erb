<% provide(:title, "Show all books") %>
<h2>Show all books</h2>
<%= link_to "Create new book", new_admin_book_path,
	                              class: "btn btn-small btn-primary" %>
<table class="table">
	<thear>
		<tr>
			<th>STT</th>
			<th>Title books</th>
			<th>Rating</th>
			<th>Publish date</th>
			<th>Category</th>
			<th>Favourites</th>
			<th>Delete</th>
		</tr>
  </thear>
	<tbody>
		<% if @books.any? %>
		<%= render @books %>
		<% end %>
	</tbody>
	<tfoot>
    <%= will_paginate %>
	</tfoot>
</table>